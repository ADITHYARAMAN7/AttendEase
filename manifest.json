{
  "manifest_version": 3,
  "name": "Amrita AttendEase",
  "version": "1.1.0",
  "description": "Enhanced smart attendance tracker for Amrita students with modern UI - calculate bunking possibilities with beautiful, intuitive design",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://students.amrita.edu/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://students.amrita.edu/client/class-attendance*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amrita AttendEase"
  }
}
